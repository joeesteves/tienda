%div{class: 'modal fade', id: 'myModal', tabindex: '-1'}
  %div{class: 'modal-dialog'}
    %div{class: 'modal-content'}
      %div{class: 'modal-header'}
        %button{type: 'button', class: 'close', 'data-dismiss': 'modal', 'aria-label': 'Close'}
          %span{'aria-hidden': 'true'} &times;
        %h4{class: 'modal-title'} Confirmar la acci√≥n 
      %div{class: 'modal-body alert alert-danger'} Esta seguro que desea borrar a {{objeto_a_borrar.nombre}} ?
      %div{class: 'modal-footer'}
        %button{type:'button', class: 'btn btn-default', 'data-dismiss': 'modal'} Cancelar
        %button{type:'button', class: 'btn btn-danger', 'ng-click': 'borrar()', 'data-dismiss': 'modal'} Borrar
